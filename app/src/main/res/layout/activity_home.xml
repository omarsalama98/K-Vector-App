<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.omarsalama.k_app7.Home"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp"
    android:background="@android:color/black"
    android:weightSum="100">

    <!-- <ImageView
         android:id="@+id/imageView5"
         android:layout_width="wrap_content"
         android:layout_height="0px"
         android:layout_weight="50"
         android:src="@drawable/kvector" />-->
    <!--android:layout_marginBottom="15dp"
        android:layout_marginTop="144dp"-->
    <!--app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="1.0"-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0px"
        android:layout_weight="80"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/k_moto7" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="6"
        android:id="@+id/facebooklayout">

        <ImageView
            android:id="@+id/facebook"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/facebook"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:text="K vector Foundation"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@+id/facebook"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="6"
        android:id="@+id/twitterlayout">

        <ImageView
            android:id="@+id/twitter"
            android:layout_width="25dp"
            android:layout_height="25dp"


            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/twitter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/facebook" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:text="K VECTOR FOUNDATION"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@+id/twitter"
            app:layout_constraintTop_toBottomOf="@+id/textView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_marginBottom="2dp"
        android:layout_weight="6"
        android:id="@+id/instagramlayout">

        <ImageView
            android:id="@+id/instagram"
            android:layout_width="25dp"
            android:layout_height="25dp"

            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/white"
            android:src="@drawable/instagram1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/twitter"
            app:layout_constraintVertical_bias="0.015" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/black"
            android:text="Kvectorfoundation"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@+id/instagram"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            tools:ignore="MissingConstraints" />
    </LinearLayout>



</LinearLayout>